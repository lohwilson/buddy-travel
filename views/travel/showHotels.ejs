<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Hotels</title>
    <%- include('../partials/head.ejs') %>

</head>
<body>

    
    <% if (currentUser) { %>

        <nav class="navbar navbar-dark bg-dark fixed-top">
            <div class="leftNav">
                <a class="navButtons" href="/">Home</a>
                <a class="navButtons" href="/travel">Trips</a>
                <a class="navButtons" href="/travelAdvice">Travel Advice</a>
                <a class="navButtons" href="/searchFlights">Search Flights</a>
                <a class="navButtons" href="/searchHotels">Search Hotels</a>
            </div>

            <div class="rightNav">
                <a class="navButtons" href="/profile"><%= currentUser.username.charAt(0).toUpperCase() + currentUser.username.slice(1) %>'s Profile</a>
                <form action="/sessions?_method=DELETE" method="post">
                    <input type="submit" value="Logout">
                </form>
            </div>
        </nav>

        <% } else { %>
            <nav class="navbar navbar-dark bg-dark fixed-top">
                <div class="leftNav">
                    <a class="navButtons" href="/">Home</a>
                    <a class="navButtons" href="/travelAdvice">Travel Advice</a>
                    <a class="navButtons" href="/searchFlights">Search Flights</a>
                    <a class="navButtons" href="/searchHotels">Search Hotels</a>
                </div>
    
                <div class="rightNav">
                    <a class="navButtons" href="/login">Login</a>
                    <a class="navButtons" href="/register">Sign Up</a>
                </div>
            </nav>
    
        <% } %>


    <div class="container">

        <div>
            <h3> Hotels </h3>
        </div>

        <!-- <div>
            <h4>
                <%= hotelResult2.neighborhood.neighborhoodName %>
            </h4>
            
            <img src="<%= hotelResult2.neighborhood.neighborhoodImage %>">
            <p>
                <%= hotelResult2.neighborhood.neighborhoodLongDescription %>
            </p>

            <h5>Places of interest</h5>
            <% hotelResult2.data.body.overview.overviewSections[1].content.forEach((content, index) => { %>
                <p>
                    <%= content %>
                </p>
            <% }) %>
        </div> -->




        <div>
            <h4>
                <%= hotelResult3.data.body.header %>
            </h4>
            
            <img src="<%= hotelResult2.neighborhood.neighborhoodImage %>">
            <p>
                <%= hotelResult2.neighborhood.neighborhoodLongDescription %>
            </p>

            <h5>Hotel Recommendations</h5>
            <% hotelResult3.data.body.searchResults.results.forEach((content, index)=>{ %>
                <div class="showHotelsDiv">
                    <p>
                        <%= content.name %>
                    </p>
                    <img src="<%=content.thumbnailUrl%>">
                    <p>
                        <%= content.ratePlan.price.current %> <em> <%= content.ratePlan.price.additionalInfo %> </em>
                    </p>
                    <p>
                        <%= content.ratePlan.price.totalPricePerStay %>
                    </p>
                </div>
            <% }) %>
        </div>
    </div>
  
    <%- include('../partials/footer.ejs') %>

</body>
</html>